<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <h1><%= @paper.title %></h1>
      <span class="label label-primary"><%= @paper.status %></span>
      <span class="label label-primary"><%= @paper.speaker_slot %></span>

      <h2>Abstract</h2>
      <p><%= simple_format @paper.abstract %></p>

      <h2>Outline</h2>
      <p><%= simple_format @paper.outline %></p>

      <div class="text-right">
        <% if @paper.editable? %>
          <%= link_to "Edit", edit_my_paper_path(@paper), class: "btn btn-default", disabled: current_conference.cfp_closed? %>
        <% end %>
      </div>

    </div>
  </div>
</div>
